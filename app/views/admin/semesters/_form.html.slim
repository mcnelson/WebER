= simple_form_for [:admin, @semester], html: { class: "form-horizontal" } do |f|
  - if @semester.errors.any?
    #error_explanation
      h2 = "#{pluralize(@semester.errors.count, "error")} prohibited this semester from being saved:"
      ul
        - @semester.errors.full_messages.each do |message|
          li = message

  .field
    = f.input :starts_at, label: "Start Date"

  .field
    = f.input :ends_at, label: "End Date"

  .actions = f.submit 'Save'
